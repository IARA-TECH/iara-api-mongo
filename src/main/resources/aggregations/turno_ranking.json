[
  {
    "$match": { "abacus.factory_id": 8 }
  },
  {
    "$project": {
      "values": 1,
      "shift": 1
    }
  },
  { "$unwind": "$values" },
  {
    "$project": {
      "values": { "$sum": "$values" },
      "shift": "$shift.name"
    }
  },
  {
    "$group": {
      "_id": "$shift",
      "totalCount": { "$sum": "$values" }
    }
  },
  { "$sort": { "totalCount": -1 } },
  { "$limit": 5 },
  {
    "$project": {
      "name": "$_id",
      "totalCount": true,
      "_id": false
    }
  }
]
